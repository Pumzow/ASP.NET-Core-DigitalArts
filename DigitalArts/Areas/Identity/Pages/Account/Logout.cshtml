@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header class="text-center">
    <h1  class="display-4">Logging out...</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark"></button>
            </form>
        }
        else
        {
            <p>Successfully logged out.</p>
        }
    }
</header>

<script>
    (() => {
        document.getElementById('logoutForm').submit();
    })()
</script>
