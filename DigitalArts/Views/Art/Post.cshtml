@model AddArtFormModel

@{
    ViewData["Title"] = "Post";
}


<div class="jumbotron">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">Post</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="An art of perfection..."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tags"></label>
                    <input asp-for="Tags" class="form-control" placeholder="Aesthetic, cold, etc...">
                    <span asp-validation-for="Tags" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="form-control" placeholder="Enter art URL...">
                    <span asp-validation-for="Image" class="small text-danger"></span>
                </div>

                <input class="btn btn-dark" type="submit" value="Post" />
            </form>
        </div>
    </div>
</div>
