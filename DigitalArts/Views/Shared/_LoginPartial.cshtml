@using DigitalArts.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Artist> SignInManager
@inject UserManager<Artist> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="btn-group" role="group" aria-label="Basic example">
            @{
                var userId = User.GetId();
                var userIsAdmin = User.IsAdmin();

                @if (userIsAdmin)
                {
                    <button type="button" class="btn btn-dark">
                        <a class="nav-link text-light" asp-area="Administration" asp-controller="Arts" asp-action="Index">
                            <img src="~/Resources/AdministrationIcon.png" alt="Profile" height="25px" /> Administration
                        </a>
                    </button>
                }
            }
            <button type="button" class="btn btn-dark">
                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    <img src="~/Resources/ProfileIcon.png" alt="Profile" height="25px" /> @User.Identity.Name
                </a>
            </button>
            <button type="button" class="btn btn-dark">
                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <img src="~/Resources/LogoutIcon.png" alt="Profile" height="25px" /> Log out
                </a>
            </button>
        </div>
    }
    else
    {
        <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-dark">
                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">
                    <img src="~/Resources/RegisterIcon.png" alt="Profile" height="25px" /> Register
                </a>
            </button>
            <button type="button" class="btn btn-dark">
                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">
                    <img src="~/Resources/LoginIcon.png" alt="Profile" height="25px" /> Login
                </a>
            </button>
        </div>
    }
</ul>

<script>
    (() => {
        document.getElementById('logoutForm').submit();
    })()
</script>
