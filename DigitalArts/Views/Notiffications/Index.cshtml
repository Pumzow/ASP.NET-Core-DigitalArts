@model IEnumerable<NotifficationServiceModel>

@{
    ViewBag.Title = "Notiffications";
}

<div class="jumbotron">
    <h1 style="text-align:center;">Notiffications</h1>
    <hr />

    @if (Model.Count() > 0)
    {
        @foreach (var notiffication in Model)
        {
            <h4>@notiffication.Title</h4>
            <h6>@notiffication.Content</h6>
            <hr />
        }
    }
    else
    {
        <p class="lead"> There are no notiffications. </p>
    }

</div>

<style>
    .columnSize {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
